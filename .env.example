# Core
APP_NAME=QOVES_INC
APP_ENV=development
APP_DEBUG=true
API_V1_PREFIX=/api/v1
LOAD_TEST_MODE=false
SIMULATED_DELAY_MS=0
SECRET_KEY=change-me
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@db:5432/qoves_inc
DB_ECHO=false
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# Cache / Redis
REDIS_URL=redis://redis:6379/0
REDIS_CACHE_EXPIRE=300
REDIS_HEALTH_KEY=qoves:health

# Workers
WORKER_BROKER_URL=redis://redis:6379/1
WORKER_BACKEND_URL=redis://redis:6379/2
WORKER_CONCURRENCY=2

# Metrics
ENABLE_METRICS=true
METRICS_PORT=9090
METRICS_PATH=/metrics

# Logging
LOG_LEVEL=INFO
LOG_MODE=json
LOG_FILE=/var/log/qoves_inc/app.log

# Testing
TEST_DATABASE_URL=sqlite+aiosqlite:///./test.db
DISABLE_AUTH_FOR_TESTS=false
